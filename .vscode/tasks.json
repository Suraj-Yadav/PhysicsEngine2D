{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Clean and ReRun Cmake",
			"type": "shell",
			"command": "echo $(pwd);ls;./configure.sh",
			"problemMatcher": []
		},
		{
			"label": "Build Debug",
			"type": "shell",
			"command": "cmake --build build/Debug/",
			"presentation": {
				"clear": true,
				"reveal": "silent"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "Build Release",
			"type": "shell",
			"command": "cmake --build build/Release/",
			"presentation": {
				"clear": true,
				"reveal": "silent"
			},
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "Build Profile",
			"type": "shell",
			"command": "cmake --build build/Profile/",
			"presentation": {
				"clear": true,
				"reveal": "silent"
			},
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "Run Debug",
			"type": "process",
			"dependsOn": "Build Debug",
			"command": "${workspaceFolder}/build/Debug/${workspaceFolderBasename}",
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"problemMatcher": []
		}
	]
}